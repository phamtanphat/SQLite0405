<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity">

    <TextView
        android:textAllCaps="true"
        android:gravity="center"
        android:textColor="#f20"
        android:textSize="40sp"
        android:text="Update mon an "
        android:id="@+id/textviewtitleUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:maxLines="1"
        android:textSize="25sp"
        android:hint="Nhap ten mon an"
        android:layout_marginTop="50dp"
        android:layout_below="@id/textviewtitleUpdate"
        android:id="@+id/edittextUpdateTenmonan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:maxLines="1"
        android:textSize="25sp"
        android:hint="Nhap gia mon an"
        android:layout_marginTop="50dp"
        android:layout_below="@id/edittextUpdateTenmonan"
        android:id="@+id/edittextUpdateGiamonan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:maxLines="1"
        android:textSize="25sp"
        android:hint="Nhap dia chi"
        android:layout_marginTop="50dp"
        android:layout_below="@id/edittextUpdateGiamonan"
        android:id="@+id/edittextUpdateDiachi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/buttonUpdateHuy"
        android:text="Huy"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/edittextUpdateDiachi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/buttonUpdateXacnhan"
        android:text="Xac nhan"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/edittextUpdateDiachi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>